{
  "name": "11ty-vite-shopify",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently npm:dev:*",
    "dev:eleventy": "NODE_ENV=development eleventy --watch",
    "dev:vite": "NODE_ENV=development vite",
    "build": "concurrently npm:build:*",
    "build:eleventy": "NODE_ENV=production eleventy",
    "build:vite": "NODE_ENV=production vite build",
    "deploy": "npm-run-all  shopify:deploy theme:push",
    "shopify": "npm-run-all -p theme:serve shopify:vite",
    "shopify:vite": "NODE_TYPE=shopify vite build --watch",
    "shopify:deploy": "NODE_TYPE=shopify vite build",
    "newtheme": "npm-run-all theme:init clean:unused",
    "clean:unused": "rimraf ./shopify/.gitignore",
    "theme:init": "shopify theme init shopify",
    "theme:serve": "cd shopify && shopify theme serve",
    "theme:push": "cd shopify && shopify theme push -n",
    "pull": "cd shopify && shopify theme pull -n",
    "cheat": "opener https://www.shopify.com/partners/shopify-cheat-sheet",
    "codesample": "opener https://shopify.github.io/liquid-code-examples/",
    "reference": "opener https://shopify.dev/api/liquid",
    "opendoc": "npm-run-all codesample cheat reference"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "dotenv": "^16.0.1",
    "eleventy-plugin-dart-sass": "^1.0.3",
    "esbuild": "^0.14.53",
    "npm-run-all": "^4.1.5",
    "opener": "^1.5.2",
    "rimraf": "^3.0.2",
    "sass": "^1.53.0",
    "vite": "^3.0.0"
  }
}
